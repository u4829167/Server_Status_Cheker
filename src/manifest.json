{
    "manifest_version": 3,
    "name": "Server Status Checker",
    "version": "1.0",
    "description": "複数のサーバーのステータスをチェックするツール",
    "permissions": ["storage", "alarms"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "sidebar.html",
      "default_icon": {
        "16": "./icons/16.png",
        "32": "./icons/32.png",
        "48": "./icons/48.png",
        "64": "./icons/64.png",
        "128": "./icons/128.png",
        "256": "./icons/256.png",
        "512": "./icons/512.png"
      }
    },
    "host_permissions": ["<all_urls>"]
  }
  